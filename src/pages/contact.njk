    <section class="page-hero page-hero--contact" aria-label="Contact Lone Star Institute of Taekwondo">
      <div class="page-hero__inner">
        <h1 class="page-hero__title">Ready to Start Your Taekwondo Journey?</h1>
      </div>
    </section>

    <section class="section contact-section" aria-label="Contact Lone Star Institute of Taekwondo">
      <div class="contact-layout page">
        <div class="cards card-grid card-grid--2 contact-cards">
          <section class="card card--compact contact-panel contact-panel--form" aria-labelledby="contact-form-title">
            <h3 id="contact-form-title">Send Us a Message</h3>
            <p class="contact-panel__lead">Drop us a line and we'll get back to you within one business day.</p>
            <form
              id="contact-form"
              name="contact"
              class="contact-form"
              action="/contact/"
              method="post"
              netlify
              data-netlify="true"
              netlify-honeypot="bot-field"
              novalidate>
              <input type="hidden" name="form-name" value="contact">
              <p class="visually-hidden">
                <label>Don’t fill this out if you're human.
                  <input type="text" name="bot-field" tabindex="-1" autocomplete="off">
                </label>
              </p>
              <div class="form-field">
                <label for="contact-name">Name<span aria-hidden="true">*</span></label>
                <input type="text" id="contact-name" name="name" autocomplete="name" required placeholder="Chuck Norris">
              </div>

              <div class="form-row">
                <div class="form-field">
                  <label for="contact-phone">Phone Number<span aria-hidden="true">*</span></label>
                  <input type="tel" id="contact-phone" name="phone" autocomplete="tel" inputmode="tel" required placeholder="817-555-1234">
                </div>

                <div class="form-field">
                  <label for="contact-email">Email<span aria-hidden="true">*</span></label>
                  <input type="email" id="contact-email" name="email" autocomplete="email" required placeholder="yourname@example.com">
                </div>
              </div>

              <div class="form-field">
                <label for="contact-message">Message<span aria-hidden="true">*</span></label>
                <textarea id="contact-message" name="message" rows="4" required placeholder="How can we help?"></textarea>
              </div>

              <div class="form-actions">
                <button type="submit" class="hero__button hero__button--primary">
                  <i data-lucide="send" aria-hidden="true"></i>
                  Submit Message
                </button>
              </div>

              <p class="form-note">We respect your privacy. Your information will only be used to respond to your inquiry.</p>
              <div class="form-success" id="form-success" role="status" aria-live="polite" hidden>
                <i data-lucide="sparkles" aria-hidden="true"></i>
                <div>
                  <strong>Message sent!</strong>
                  <p>Thanks for reaching out. We'll follow up within one business day — call <a href="tel:+16825548531">(682) 554-8531</a> if you need a faster reply.</p>
                </div>
              </div>
              <p class="form-error" id="form-error" role="status" aria-live="polite" hidden>
                Something went wrong while sending your message. Please try again or email us at <a href="mailto:info@lsitkd.com">info@lsitkd.com</a>.
              </p>
            </form>
          </section>

          <aside class="card card--compact contact-panel contact-panel--info" aria-labelledby="contact-details-title">
            <h3 id="contact-details-title">Visit or Reach Us Directly</h3>
            <div class="contact-info">
              <div class="contact-info__item">
                <i data-lucide="map-pin" aria-hidden="true"></i>
                <div>
                  <p class="contact-info__label">Lone Star Institute of Taekwondo</p>
                  <address>
                    1541 S. Bowen Road<br>
                    Pantego, TX 76013
                  </address>
                  <a class="contact-info__link" id="contact-directions" href="https://www.google.com/maps/dir/?api=1&destination=1541+S+Bowen+Road,+Pantego,+TX+76013" target="_blank" rel="noopener">Get Directions</a>
              </div>
            </div>
            <hr class="contact-info__divider" aria-hidden="true">

            <div class="contact-info__item">
              <i data-lucide="phone" aria-hidden="true"></i>
              <div>
                <p class="contact-info__label">Call or Text</p>
                <a class="contact-info__link" href="tel:+16825548531">(682) 554-8531</a>
                <p class="contact-info__caption">Call or text us! We're happy to answer quick questions about classes, schedules, or trial lessons.</p>
              </div>
            </div>
            <hr class="contact-info__divider" aria-hidden="true">

            <div class="contact-info__item">
              <i data-lucide="mail" aria-hidden="true"></i>
              <div>
                <p class="contact-info__label">Email</p>
                <a class="contact-info__link" href="mailto:info@lsitkd.com">info@lsitkd.com</a>
              </div>
            </div>
            <hr class="contact-info__divider" aria-hidden="true">

            <div class="contact-info__item">
              <i data-lucide="clock" aria-hidden="true"></i>
                <div>
                  <p class="contact-info__label">Business Hours</p>
                  <p class="contact-info__caption">Monday – Friday: 5:00pm – 9:00pm<br>Daytime Classes: Monday, Wednesday, Friday 12:00pm – 1:00pm</p>
                </div>
              </div>
            </div>

            <div class="contact-map">
              <div class="contact-map__frame" id="map-container">
                <iframe
                  title="Map to Lone Star Institute of Taekwondo"
                  aria-label="Map to Lone Star Institute of Taekwondo"
                  data-src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3355.796879195395!2d-97.15247692470955!3d32.7193975877731!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864e7b0461fbb6f5%3A0xc1c97e7ffb62a1c0!2s1541%20S%20Bowen%20Rd%2C%20Pantego%2C%20TX%2076013!5e0!3m2!1sen!2sus!4v1699123456789!5m2!1sen!2sus"
                  loading="lazy"
                  allowfullscreen
                  referrerpolicy="no-referrer-when-downgrade"></iframe>
              </div>
              <noscript>
                <p class="contact-map__fallback">
                  <a href="https://www.google.com/maps/dir/?api=1&destination=1541+S+Bowen+Road,+Pantego,+TX+76013" target="_blank" rel="noopener">
                    View map and directions on Google Maps
                  </a>
                </p>
              </noscript>
            </div>
          </aside>
        </div>
      </div>
    </section>

  
