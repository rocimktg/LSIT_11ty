{
  "name": "lsit-11ty",
  "version": "1.0.0",
  "description": "Lone Star Institute of Taekwondo marketing site rebuilt with Eleventy 3.",
  "type": "module",
  "scripts": {
    "clean": "del-cli dist",
    "build:css": "cross-env NODE_ENV=production postcss src/assets/css/site.css -o dist/assets/css/site.css",
    "build:js": "esbuild src/assets/js/main.js --bundle --sourcemap --minify --outfile=dist/assets/js/main.js",
    "build:eleventy": "eleventy",
    "build": "npm-run-all clean build:css build:js build:eleventy",
    "dev:css": "postcss src/assets/css/site.css -o dist/assets/css/site.css --watch",
    "dev:js": "esbuild src/assets/js/main.js --bundle --sourcemap --outfile=dist/assets/js/main.js --watch",
    "dev:eleventy": "eleventy --serve --quiet",
    "dev": "npm-run-all --parallel dev:css dev:js dev:eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-img": "^4.0.2",
    "@11ty/eleventy-navigation": "^0.4.1",
    "luxon": "^3.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^6.1.2",
    "del-cli": "^6.0.0",
    "esbuild": "^0.23.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "engines": {
    "node": ">=18.17"
  }
}
